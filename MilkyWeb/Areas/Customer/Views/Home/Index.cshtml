@model IEnumerable<Milky.Models.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3 mb-5">
    @foreach (var prod in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row pt-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@prod.ImageUrl" class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@prod.Title</p>
                                <p class="card-title text-warning text-center">by: <b>@prod.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">List Price: <span class="text-decoration-line-through"> @prod.ListPrice.ToString("c")</span> </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 mb-0 text-center">As low as: <span class="">@prod.Price100.ToString("c")</span></p>
                            </div>
                        </div>
                        <a asp-action="Details" asp-route-id ="@prod.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
